{
  "name": "pd-free-angularcli",
  "version": "1.0.1",
  "scripts": {
    "ng": "ng",
    "config": "ts-node ./scripts/set-env.ts",
    "config:dev": "npm run config -- --environment=dev",
    "config:prod": "npm run config -- --environment=prod",
    "start": "npm run config:dev && ng serve --configuration=development",
    "build": "npm run config:prod && ng build --prod",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "precommit": "yarn test"
  },
  "private": true,
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/unit-tests-config/setupJest.ts",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/app/**/*.{ts}",
      "!src/**/*.module.{ts}",
      "!src/**/*.model.{ts}",
      "!**/node_modules/**"
    ],
    "modulePathIgnorePatterns": [
      "./e2e"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./src/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html"
    ],
    "moduleNameMapper": {
      "app/(.*)": "<rootDir>/src/app/$1",
      "assets/(.*)": "<rootDir>/src/assets/$1",
      "environments/(.*)": "<rootDir>/src/environments/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|ngx-bootstrap|@progress)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "dependencies": {
    "@angular-devkit/core": "10.0.7",
    "@angular/animations": "^10.0.12",
    "@angular/common": "10.0.12",
    "@angular/compiler": "10.0.12",
    "@angular/core": "10.0.12",
    "@angular/forms": "10.0.12",
    "@angular/platform-browser": "10.0.12",
    "@angular/platform-browser-dynamic": "10.0.12",
    "@angular/platform-server": "10.0.12",
    "@angular/router": "10.0.12",
    "amazon-cognito-identity-js": "^3.0.5",
    "arrive": "2.3.1",
    "bootstrap": "3.3.5",
    "bootstrap-notify": "3.1.3",
    "chartist": "0.9.4",
    "core-js": "2.4.1",
    "express": "4.15.3",
    "jquery": "1.12.4",
    "moment": "^2.22.2",
    "ngx-bootstrap": "^3.0.1",
    "rxjs": "^6.6.2",
    "tslib": "^2.0.0",
    "validator": "^10.8.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.7",
    "@angular/cli": "10.0.7",
    "@angular/compiler-cli": "10.0.12",
    "@angularclass/hmr": "^2.1.3",
    "@types/bootstrap": "3.3.32",
    "@types/chartist": "0.9.34",
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^22.1.1",
    "@types/jquery": "1.10.31",
    "@types/node": "^12.11.1",
    "@types/yargs": "^12.0.1",
    "codelyzer": "^6.0.0",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "jest": "^23.3.0",
    "jest-preset-angular": "^6.0.1",
    "jest-zone-patch": "0.0.8",
    "protractor": "~7.0.0",
    "ts-node": "4.1.0",
    "tslint": "~6.1.0",
    "typescript": "3.9.7",
    "yargs": "^12.0.2"
  }
}
